<div class="container">
	<!-- TABLE HEADER -->
	<div id='alert-box'></div>
	<div id='header-row' class="row th">
		<span class="col-md-2 col-md-offset-2"><strong>Quantity</strong></span>
		<span class="col-md-2"><strong>Price</strong></span>
		<span class="col-md-6"><strong>Name</strong></span>
	</div>

	<!-- ADD NEW INGREDIENT -->
	<form id="add-form" class="form-inline">
		<div class="row bottom-border">
			<div class="col-md-2 text-center"><label for="new-qty">New Ingredient</label></div>

			<div class="col-md-2">
				<input id="new-qty" class="form-control full-width" type='text' name='qty' placeholder='1000' />
			</div>

			<div class="col-md-2">
				<div class="input-group full-width">
					<div class="input-group-addon">$</div>
					<input class="form-control" type='text' name='price' placeholder='1.00' />
				</div>
			</div>

			<div class="col-md-4">
				<input class="form-control full-width" type='text' name='name' placeholder='Ingredient Name' />
			</div>

			<div class="col-md-2">
				<button class="btn btn-success" form='add-form' type='submit' value="add">Add New</button>
			</div>	
		</div>
	</form>

	<!-- INGREDIENT ROWS -->
	<div id="ingredient-rows">
		{{> ingredients}}
	</div>
</div>