<table class="table table-striped table-hover">
	<thead>
		<!-- HEADER ROW -->
		<tr>
			<th></th>
			<th ><strong>Quantity</strong></th>
			<th ><strong>Price</strong></th>
			<th ><strong>Name</strong></th>
			<th></th>
		</tr>

		<!-- ADD NEW ROW -->
		<tr>
			<form id='add-new'>
				<td><strong>New Ingredient</strong></td>
				<td><input type='text' name='qty' value='1000' size='7'></input></td>
				<td><input type='text' name='price' value='1.00' size='7'></input></td>
				<td><input type='text' name='name' value='Ingredient-Name' size='20'></input></td>
				<td><button class="btn btn-success" type='submit'>Add New</button></td>
			</form>
		</tr>
	</thead>

	<tbody>
		<!-- INGREDIENT ROWS -->
		{{> ingredient}}
	</tbody>
</table>

